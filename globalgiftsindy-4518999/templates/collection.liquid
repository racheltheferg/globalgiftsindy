<div id="collection">
  
  {% paginate collection.products by settings.pagination_limit %}
  
<div class="span12 collection-guts content">
  
  <!-- Begin collection info -->
  <div class="span9">
      <div>
      
          <!-- Begin sort collection -->
          <div class="clearfix">
              <h1 class="collection-title">{{ collection.title }}</h1>
                {% if settings.collection_tags %}
                  {% capture col_url%}{% if collection.url.size == 0 %}/collections/all{%else%}{{collection.url}}{%endif%}{%endcapture%}
                    
                {% endif %}
            </div>
            <!-- End sort collection -->
      
            <!-- Begin collection description -->
            {% if collection.description != "" %}
              {{ collection.description }}
            {% endif %}
            <!-- End collection description -->
      
        </div>

        <!-- End collection info -->
  
        <!-- Begin no products -->
        {% if collection.products.size == 0 %}
        <div>
            <div class="span9 expanded-message">
                <p>No products found</p>
            </div>
        </div>
        {% endif %}
  
        <div class="products">
          {% for product in collection.products limit: settings.pagination_limit %}
          {% include 'product-loop' with collection.handle %}
          {% endfor %}
        </div>
  
  
  
        {% include 'pagination' %}

        {% endpaginate %}
  
  <!-- End no products -->

    
</div> 
<div>
  <!-- Begin sidebar -->
  {% include 'collection-sidebar' %}
  <!-- End sidebar -->
</div>
</div>


